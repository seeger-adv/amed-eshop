<html t:type="Layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
   <table width="100%" class="table">
            <thead>
              <tr>
                <th>Item</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <tr t:type="loop" source="items" value="item">
                <td>${item.product.slug}</td>
                <td>
                  ${item.amount}
                  <a t:id="add" class="btn btn-small">+</a>
                  <a t:id="sub" class="btn btn-small">-</a>
                </td>
                <td>${item.product.price}</td>
                <td>${total}</td>
              </tr>
            </tbody>
           </table>
           
           <a t:id="checkout" class="btn btn-primary"
                    role="button">Checkout</a>
</html>