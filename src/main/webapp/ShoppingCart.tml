<html t:type="Layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
   <table width="100%" class="table">
            <thead>
              <tr>
                <th>Item</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <tr t:type="loop" source="items" value="item">
                <td>${item.slug}</td>
                <td>
                  ${amount}
                  <div class="btn-group btn-group-xs">
                      <a t:id="add" class="btn"><span class="glyphicon glyphicon-plus"></span></a>
                      <a t:id="sub" class="btn"><span class="glyphicon glyphicon-minus"></span></a>
                      <a t:id="del" class="btn"><span class="glyphicon glyphicon-trash"></span></a>
                  </div>
                </td>
                <td>${item.price}</td>
                <td>${total}</td>
              </tr>
            </tbody>
           </table>

           <t:pagelink page="Checkout" class="btn btn-lg btn-primary btn-block">Proceed to Checkout</t:pagelink>
</html>