<html t:type="Layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
    <h1>Summary</h1>

    <table class="table col-lg-8">
        <thead>
            <tr>
                <th>Item</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr t:type="loop" source="purchase.items" value="item">
                <td>${item.product.slug}</td>
                <td>${item.amount}</td>
                <td>${item.product.price}</td>
                <td>${total}</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2"></td>
                <td class="summary">w/o Tax</td>
                <td>${woTax}</td>
            </tr>
            <tr>
                <td colspan="2" style="border:none"></td>
                <td class="summary">Sales Tax</td>
                <td>${tax}</td>
            </tr>
            <tr>
                <td colspan="2"></td>
                <td class="summary">Total</td>
                <td>${sum}</td>
            </tr>
        </tfoot>
    </table>

    <a t:type="eventlink" t:id="send" class="btn btn-lg btn-primary btn-block">Checkout</a>
</html>