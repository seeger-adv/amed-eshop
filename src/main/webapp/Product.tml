<html t:type="Layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">   
        <div class="col-lg-offset-2 col-lg-8">
          <div class="col-lg-9 col-lg-offset-3"><h3>${product.slug}</h3></div>
          <div class="col-lg-3"><img src="${product.image}" class="zoomable" alt="Image of ${product.slug}" /></div>
          <div class="col-lg-6">${product.description}</div>
          <div class="well col-lg-3">
            <div>${product.price}</div>
            <div>
              <span class="label label-${availability.badge}">${availability}</span>
            </div>
            <div>
              <a
                t:id="addToBasket"
                class="btn btn-primary"
                role="button">Add to Cart</a>
            </div>
          </div>
       </div>
</html>