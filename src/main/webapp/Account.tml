<html t:type="Layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
  <div class="row">
    <div class="col-lg-8">
      <h2>Recent Orders</h2>
      <table width="100%" class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Order Date</th>
            <th>Shipping Status</th>
          </tr>
        </thead>
        <tbody>
          <tr t:type="loop" source="purchases" value="purchase">
            <td>${purchase.id}</td>
            <td>${purchase.date}</td>
            <td>${purchase.shippingState}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
		  <h3 class="panel-title">Payment information</h3>
		</div>
		<div class="panel-body">
		  <div t:type="loop" source="customer.paymentInfo" value="payment">
            <td>${payment}</td>
          </div>
        </div>
		<div class="panel-footer"><t:pagelink page="AddPayment" role="button" href="#" class="btn btn-primary">Add Payment Details &raquo;</t:pagelink></div>
      </div>
          
      <div class="panel panel-primary">
        <div class="panel-heading">
		  <h3 class="panel-title">Shipping Addresses</h3>
		</div>
		<div class="panel-body">
		  <tr t:type="loop" source="customer.address" value="address">
            <td>${address.name}</td>
            <td>${address.street}</td>
            <td>${address.zip}</td>
            <td>${address.city}</td>
          </tr>
		</div>
		<div class="panel-footer"><t:pagelink page="AddAddress" role="button" href="#" class="btn btn-primasry">Add an Address &raquo;</t:pagelink></div>
      </div>
    </div>
  </div>
</html>