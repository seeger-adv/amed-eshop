<html t:type="Layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
     <form t:type="form" t:id="contactForm" class="form-contact" role="form">

        <h2 class="form-signin-heading">Customer Support</h2>

        <t:errors/>

            <t:textfield
                type="email"
                value="username"
                validate="email"
          placeholder="Mail Adress"
            t:validate="required" />

        <t:textarea
          value="message"
          class="form-control bottom"
          placeholder="Message"
          t:validate="required" />

        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </form>
</html>