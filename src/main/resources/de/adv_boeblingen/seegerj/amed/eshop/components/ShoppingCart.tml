<div class="dropdown ${layout}" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <span class="glyphicon glyphicon-shopping-cart"></span>
    ${shoppingCart.items.size()}
  </a>
  <ul class="dropdown-menu">
    <li t:type="loop" source="items" value="item" >
      <a t:type="pagelink" t:page="${item.id}">${item.product.slug}</a>
    </li>
  </ul>
</div>